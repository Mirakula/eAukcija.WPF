<Window x:Class="eAukcija.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:eAukcija.UI"
        mc:Ignorable="d"
        Title="eAukcija - Aukcije" Height="450" Width="800"
        WindowStartupLocation="CenterScreen">

    <Grid Background="Transparent">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"></ColumnDefinition>
            <ColumnDefinition Width="417*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        <TextBox Name="txtBox" HorizontalAlignment="Center" TextWrapping="Wrap"
                 Text="&quot;Lorem ipsum dolor sit amet, consectetur adipiscing elit. Maecenas vitae ornare
arcu. Donec vestibulum at tortor ut vulputate. Suspendisse finibus sapien sed est
gravida, eget rutrum est maximus. Praesent nibh eros, porta eget dolor quis, sodales
convallis lacus. Nunc sed interdum nisi, id tempor justo. Fusce at tellus non eros
fringilla consectetur. Proin sit amet tincidunt lectus. Integer ut rutrum ex, vitae
placerat lorem. Sed blandit, erat non interdum rutrum, risus felis venenatis augue, a
vestibulum elit dui in lorem. Aliquam tempus augue quis metus sollicitudin, id
efficitur nulla scelerisque. Donec euismod in arcu vel vulputate. Morbi neque ligula,
iaculis vitae volutpat sit amet, sodales eu enim. Maecenas euismod arcu velit, in
scelerisque lorem facilisis vitae. In dignissim quam nec molestie tempus.&quot;"
                 VerticalAlignment="Center" Margin="10,1" Grid.ColumnSpan="2"
                 SelectionChanged="TxtBox_OnSelectionChanged"/>
        <Label Grid.Row="1" Grid.Column="0" VerticalAlignment="Top" HorizontalAlignment="Left"
               Margin="10,1" Content="Selection Start:"/>
        <Label Grid.Row="2" Grid.Column="0" VerticalAlignment="Top" HorizontalAlignment="Left"
               Margin="10, 1" Content="Selection Length:"/>
        <Label Grid.Row="3" Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Top"
               Margin="10, 1" Content="Selected Text: "/>
        <Label Name="selectionStartLbl" HorizontalAlignment="Left" Grid.Column="1"
               Grid.Row="1" VerticalAlignment="Top" />
        <Label Name="selectionLengthLbl" HorizontalAlignment="Left" Grid.Column="1"
               Grid.Row="2" VerticalAlignment="Top"/>
        <TextBlock TextWrapping="Wrap" Name="selectionTextLbl"
                   HorizontalAlignment="Left" Grid.Column="1" Grid.Row="3" VerticalAlignment="Top"/>
        <StackPanel Grid.Row="4" Grid.Column="1">
            <RichTextBox>
                <FlowDocument>
                    <Paragraph FontSize="36">Hello, World !</Paragraph>
                    <Paragraph FontStyle="Italic" TextAlignment="Left" FontSize="14" 
                               Foreground="Gray" >This i a completely editable FlowDocument inside RichTextBox!</Paragraph>
                </FlowDocument>
            </RichTextBox>
            <StackPanel Orientation="Horizontal">
                <Slider Maximum="100" Minimum="0" Margin="10" TickPlacement="BottomRight" TickFrequency="5" 
                        IsSnapToTickEnabled="True" Name="sliderCtrl" Width="458"/>
                <TextBox Text="{Binding ElementName=sliderCtrl, Path=Value, UpdateSourceTrigger=PropertyChanged}" 
                         TextAlignment="Right" Width="40" Height="35"></TextBox>
            </StackPanel>
            
        </StackPanel>
        
        <StackPanel Grid.Row="4" Grid.Column="0" Orientation="Vertical">
            <ComboBox>
                <ComboBoxItem>Blue</ComboBoxItem>
                <ComboBoxItem>Green</ComboBoxItem>
                <ComboBoxItem>Red</ComboBoxItem>
                <ComboBoxItem>Yellow</ComboBoxItem>
            </ComboBox>
            <ListBox HorizontalAlignment="Left" Width="100" SelectionChanged="Selector_OnSelectionChanged" x:Name="listBox" SelectionMode="Extended">
                <StackPanel Orientation="Horizontal">
                    <Rectangle Width="30" Height="10" Stroke="Black"></Rectangle>
                    <Label>Racrangle</Label>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Ellipse Width="30" Height="10" Stroke="Black"></Ellipse>
                    <Label>Ellipse</Label>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Polygon VerticalAlignment="Center" Points="0,0 30, 10 0, 10" Stroke="Black"></Polygon>
                    <Label>Polygon</Label>
                </StackPanel>
            </ListBox>
            <PasswordBox Grid.Row="4" Grid.Column="0" x:Name="passwordBox" Width="130" Height="23"
                         VerticalContentAlignment="Center"/>
        </StackPanel>
    </Grid>




